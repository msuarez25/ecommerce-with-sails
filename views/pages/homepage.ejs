<%- partial('../partials/nav.ejs') %>
<div class="container py-5">
  <div class="jumbotron">
    <h1>LOGIN</h1>
    <br />
    <form
      class="form"
      role="form"
      action="/login"
      method="post"
      autocomplete="off"
    >
      <div class="form-group mb-3">
        <input
          name="username"
          placeholder="Nombre"
          class="form-control"
          type="text"
          required
        />
      </div>
      <div class="form-group">
        <input
          name="password"
          placeholder="Password"
          class="form-control"
          type="password"
          required
        />
      </div>

      <div class="form-group">
        <input class="btn btn-success my-3" type="submit" value="Login" />
      </div>
    </form>

    <hr />
    <div class="text-center"></div>
    <a href="/sign-up" class="btn btn-warning my-3">SIGNUP</a>
  </div>
</div>
